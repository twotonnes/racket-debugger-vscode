{
  "name": "racket-debugger",
  "displayName": "Racket Debugger",
  "description": "Adds debugger support for Racket.",
  "author": {
    "name": "Twotonnes"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Debuggers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/twotonnes/racket-debugger-vscode"
  },
  "activationEvents": [
    "onDebugResolve:racket",
    "onDebugDynamicConfigurations:racket",
    "onCommand:extension.racket-debugger.helloWorld",
    "onLanguage:racket"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.racket-debug.runEditorContents",
          "when": "resourceLangId == racket",
          "group": "navigation@1"
        },
        {
          "command": "extension.racket-debug.debugEditorContents",
          "when": "resourceLangId == racket",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.racket-debug.debugEditorContents",
          "when": "resourceLangId == racket"
        },
        {
          "command": "extension.racket-debug.runEditorContents",
          "when": "resourceLangId == racket"
        }
      ]
    },
    "debuggers": [
      {
        "type": "racket",
        "label": "Racket Debug",
        "languages": [
          "racket"
        ],
        "program": "./dist/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program",
              "debugServer"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a Racket source file.",
                "default": "${file}"
              },
              "debugServer": {
                "type": "number",
                "description": "Debug server port to connect to.",
                "default": 4142
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "racket",
            "request": "launch",
            "name": "Launch Racket Program",
            "program": "${command.AskForProgramName}",
            "debugServer": 4142
          }
        ],
        "configurationSnippets": [
          {
            "label": "Racket Debug: Launch",
            "description": "A new configuration for debugging a user selected Racket program.",
            "body":
            {
              "type": "racket",
              "request": "launch",
              "name": "Launch Racket Program",
              "program": "^\"\\${command:AskForProgramName}\"",
              "debugServer": 4142
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.racket-debug.askForProgramName"
        }
      }
    ],
    "commands": [
      {
        "command": "extension.racket-debug.debugEditorContents",
        "title": "Debug File",
        "category": "Racket Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.racket-debug.runEditorContents",
        "title": "Run File",
        "category": "Racket Debug",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      }
    ],
    "breakpoints": [
      {
        "language": "racket"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}